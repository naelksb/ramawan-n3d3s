{
    "app": {
        "name": "Ramawan App",
        "version": "1.0.0",
        "description": "Aplikasi pendamping Ramadan dengan fitur jadwal sholat, tracker ibadah, dan kalender Hijriyah"
    },
    "prayer": {
        "defaultCity": "Jakarta",
        "defaultCountry": "Indonesia",
        "calculationMethod": 2,
        "notificationsEnabled": true,
        "notificationMinutesBefore": 5
    },
    "ramadan": {
        "year": 1447,
        "startDate": "2026-03-01",
        "endDate": "2026-03-30"
    },
    "features": {
        "prayerTimes": true,
        "hijriCalendar": true,
        "ibadahTracker": true,
        "dzikirCounter": true,
        "quranTracker": true,
        "sedekahTracker": true,
        "darkMode": true,
        "notifications": true
    },
    "ui": {
        "theme": "light",
        "language": "id",
        "animations": true
    }
}